{
  "compileOnSave": false,
	"compilerOptions": {
		"importHelpers": true,
		"resolveJsonModule": true,
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "ES2015",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2017",
			"dom"
		],
		"module": "es2015",
		"baseUrl": "./"
	},
  "include": [
    "src/**/*.ts",
    "node_modules/phd-common/**/*.ts"
  ]
}
