{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"lib": [
			"ES2019",
			"DOM"
		],
		"outDir": "./out-tsc/app",
		"baseUrl": "./",
		"experimentalDecorators": true,
		"strict": false,
		"noImplicitUseStrict": true,
		"alwaysStrict": false,
		"strictPropertyInitialization": false,
		"types": [
			"node"
		],
		"paths": {
			"phd-common": [
				"../phd-common/src/internal"
			]
		}
	},
	"include": [
		"../phd-common/**/*.ts",
		"**/*.ts"
	],
	"exclude": [
		"src/test.ts",
		"**/*.spec.ts",
		"**/*.worker.ts",
		"../phd-common/src/test.ts",
		"../phd-common/**/*.spec.ts"
	],
	"angularCompilerOptions": {
		"enableIvy": true
	}
}